@model List<Application.ViewModels.CommentVM>
<h2>Comments</h2>
<table id="commentsTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr class="">
            <th>Name</th>
            <th>Email</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
        <tr style="height: 60px;">
            <td>@comment.name</td>
            <td>@comment.email</td>
            <td>@comment.body</td>
        </tr>
        }
    </tbody>
</table>

             